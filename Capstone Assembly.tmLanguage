			<key>begin</key>
			<string>^(\w+)\s+\.(BYT)\s+('.+')\s*(;.*)?$</string>
			<key>captures</key>
			<dict>
				<key>1</key>
				<dict>
					<key>name</key>
					<string>entity.name.function</string>
				</dict>
				<key>2</key>
